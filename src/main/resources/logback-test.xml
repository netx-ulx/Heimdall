<configuration scan="true">
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %level [%logger{20}:%thread]\t%msg%n</pattern>
    </encoder>
  </appender>
  <root level="INFO">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="EV_WARN_ERR" />
  </root>
  <logger name="org" level="INFO"/>
  <logger name="io" level="INFO"></logger> <!-- Netty logging -->
  <logger name="LogService" level="WARN"></logger> <!-- Restlet access logging -->
  <logger name="net.floodlightcontroller" level="INFO"/>
  <logger name="org.sdnplatform" level="INFO"></logger>


